
#instadesktop
    = link_to v2_home_path, id: "back-button", class: "btn btn-primary" do
        %span.glyphicon.glyphicon-chevron-left
    #webcam-feed.col-xs-12.col-sm-6
        %span WEBCAM FEED HERE
        %button#snap.btn.btn-primary.btn-block
            TAKE SNAPSHOT!
    #snapshot.col-xs-12.col-sm-6
        %span SNAPSHOT HERE

:scss
    #instadesktop{
        height: 100%;
        width: 100%;
        color: white;
        font-family: Avenir, sans-serif;
        font-size: 4em;
        text-align: center;
            
        #webcam-feed{
            height: 100%;
            background: desaturate(blue, 80%);
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            button{
                position: absolute;
                bottom: 0;
            }
        }
        #snapshot{
            height: 100%;
            background: desaturate(red, 80%);
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            position: relative;
        }
    }
    #back-button{
        position: absolute;
        z-index: 100;
        top: 15px;
        left: 15px;
    }